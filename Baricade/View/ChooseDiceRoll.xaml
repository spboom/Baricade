<Window x:Class="Baricade.View.ChooseDiceRoll"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Dice Roll" Height="200" Width="300">
    <Grid>
        <Label Content="What will be the current dice throw?" HorizontalAlignment="Left" Margin="48,22,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" Name="btnOK" HorizontalAlignment="Left" Margin="168,117,0,0" VerticalAlignment="Top" Width="75" Click="btnOKClick"/>
        <Button Content="Cancel" Name="btnCancel" HorizontalAlignment="Left" Margin="70,117,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelClick"/>

        <ComboBox Name="cmbDiceThrow" HorizontalAlignment="Left" Margin="114,62,0,0" VerticalAlignment="Top" Width="80">
            <ComboBoxItem Content="1"></ComboBoxItem>
            <ComboBoxItem Content="2"></ComboBoxItem>
            <ComboBoxItem Content="3"></ComboBoxItem>
            <ComboBoxItem Content="4"></ComboBoxItem>
            <ComboBoxItem Content="5"></ComboBoxItem>
            <ComboBoxItem Content="6"></ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>