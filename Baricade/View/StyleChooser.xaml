        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose your style" Height="300" Width="300">
    <Grid>
        <ListBox Name="lbStyle" HorizontalAlignment="Left" Height="100" Margin="104,55,0,0" VerticalAlignment="Top" Width="100">
            <ListBoxItem>Text</ListBoxItem>
            <ListBoxItem>Minimalistic</ListBoxItem>
        </ListBox>

        <Button Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="129,170,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
    </Grid>
</Window>